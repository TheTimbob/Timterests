package components

import "fmt"

templ Card(title, subtitle, date, body, imagePath, get string, tags []string, index int) {
	<div class="card-container animate-slide-up" style={ fmt.Sprintf("animation-delay: %.1fs", float64(index)*0.1) } hx-get={ get } hx-target="#main-content" hx-swap="innerHTML" hx-push-url="true" tabindex="0">
        if imagePath != "" {
            <div class="card-image">
                <img src={ string(templ.SafeURL(imagePath)) } alt="Card image">
            </div>
        }
        <div class="card-content">
            @CardTitleContainer(title, subtitle)
            <div class="card-body">
                @templ.Raw(body)
            </div>
            if date != "" {
                <p class="card-date">{ date }</p>
            }
            <div class="tag-container">
                for _, tag := range tags {
                    <p class="card-tag">{ tag }</p>
                }
            </div>
        </div>
	</div>
}

templ MiniCard(title, date, imagePath, get string, tags []string, index int) {
	<div class="mini-card-container animate-slide-up" style={ fmt.Sprintf("animation-delay: %.1fs", float64(index)*0.1) } hx-get={ get } hx-target="#main-content" hx-swap="innerHTML" hx-push-url="true" tabindex="0">
        if imagePath != "" {
            <img src={ string(templ.SafeURL(imagePath)) } alt="Mini card image" class="card-image">
        }
        <div class="card-content">
			<div class="card-title-container">
				<h2 class="card-subtitle">{ title }</h2>
			</div>
            if date != "" {
			    <p class="card-date">{ date }</p>
            }
            <div class="tag-container">
                for _, tag := range tags {
                    <p class="card-tag">{ tag }</p>
                }
            </div>
		</div>
	</div>
}

templ Link(title, date, get string) {
    <div class="link-item animate-slide-up" hx-get={ get } hx-target="#main-content" hx-swap="innerHTML" hx-push-url="true">
        if date != "" {
            <p>{ date } - { title } </p>
        } else {
            <p>{ title }</p>
        }
    </div>
}

templ CardTitleContainer(title, subtitle string) {
    <div class="card-title-container">
        <h1 class="card-title">{ title }</h1>
        <h2 class="card-subtitle">{ subtitle }</h2>
    </div>
}
